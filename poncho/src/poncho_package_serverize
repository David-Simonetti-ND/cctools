if __name__ == "__main__":
	parser = argparse.ArgumentParser(description="Creates a network function based on an input file and function")
	parser.add_argument('filename', help='Source file that contains the function to be serverized')
	parser.add_argument('function_name', help='Name of the function in filename to be serverized')
	parser.add_argument('--pack', action='store_true', help='Pack network function into an environemnt')
	parser.add_argument('--dest', help='Output path for network function')
	args = parser.parse_args()
	print(args)
	if not args.pack:
		create_network_function(args.filename, args.function_name, args.dest)